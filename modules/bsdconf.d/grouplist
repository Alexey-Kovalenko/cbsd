#!/usr/local/bin/cbsd
#v10.1.3
MYARG=""
MYOPTARG="jname"
MYDESC="Show group list"

. ${subrdir}/nc.subr
. ${cbsdinit}

#defines
_MYDIR=$(dirname `realpath $0`)
SERVICE="group"

check_jaildir()
{
	[ -f ${data}/etc/group ] && return 0
	return 1
}

if [ -z "${jname}" ]; then
	data=""
	exec_cmd=""
else
	. ${jrcconf}
	[ $? -eq 1 ] &&  err 1 "${N1_COLOR}No such jail: ${N2_COLOR}${jname}${N0_COLOR}"
	check_jaildir

	if [ $? -eq 1 ]; then
		echo "bad data dir"
		exit 1
	fi
fi

${GREP_CMD} -v ^# ${data}/etc/group | ${AWK_CMD} -F":" '{print $1}'
