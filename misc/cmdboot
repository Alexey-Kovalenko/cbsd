#!/bin/sh
# Re-generate external executable cmd macros:
# different platforms may have different full/realpaths
: ${distdir="/usr/local/cbsd"}
# MAIN
if [ -z "${workdir}" ]; then
	[ -z "${cbsd_workdir}" ] && . /etc/rc.conf
	[ -z "${cbsd_workdir}" ] && exit 0
	workdir="${cbsd_workdir}"
fi

[ ! -f "${distdir}/cbsd.conf" ] && exit 0

. ${distdir}/cbsd.conf

CMD_FILE=${workdir}/cmd.subr
export PATH=/sbin:/bin:/usr/sbin:/usr/bin:/usr/local/sbin:/usr/local/bin

# Hardened/FreeBSD/TrueOS-specific CMD
add_freebsd_cmd()
{
	MAIN_CMD="${MAIN_CMD} \
bsdlabel \
etcupdate \
zfs \
zpool \
ipfw \
cpuset \
growfs \
gpart \
jexec \
lockf \
jail \
bhyvectl \
makefs \
mkimg \
mkuzip \
newfs \
newfs_msdos \
ndp \
"
}

# DragonflyBSD-specific CMD
add_dragonfly_cmd()
{
	MAIN_CMD="${MAIN_CMD} \
hammer2 \
"
}



# main cmd: generic command for all platform
MAIN_CMD="\
arp \
awk \
basename \
cat \
cc \
chown \
chflags \
chmod \
chroot \
column \
cp \
cpio \
cut \
daemon \
date \
dd \
df \
du \
dirname \
egrep \
env \
fetch \
find \
file \
grep \
gzip \
head \
id \
idprio \
ifconfig \
install \
jot \
kenv \
kldload \
kldstat \
ldd \
ln \
ls \
make \
md5 \
mdconfig \
mkdir \
mtree \
mktemp \
mount \
mv \
nc \
newfs \
pax \
ps \
ping \
ping6 \
pw \
pwd \
readlink \
realpath \
rm \
rmdir \
route \
rsync \
sed \
seq \
sort \
sha256 \
ssh \
ssh-keygen \
stat \
su \
sysctl \
sysrc \
stty \
tail \
tar \
tee \
timeout \
touch \
uname \
tr \
truncate \
umount \
whoami \
xargs \
xz \
xzcat \
wc \
"

case "${platform}" in
	FreeBSD|HardenedBSD|TrueOS)
		add_freebsd_cmd
		;;
	DragonFly)
		add_dragonfly_cmd
		;;
esac

truncate -s0 ${CMD_FILE}

cat > ${CMD_FILE} <<EOF
if [ ! "\$_CBSD_CMD_SUBR" ]; then
_CBSD_CMD_SUBR=1
###
EOF

MAIN_CMD=$( echo ${MAIN_CMD} | sort )

for i in ${MAIN_CMD}; do
	mycmd=
	mycmd=$( which ${i} )
	if [ ! -x "${mycmd}" ]; then
		echo "cmdboot: no such executable, CBSD dependency/requirement: ${i}"
		exit 1
	fi
	MY_CMD=$( echo ${i} | tr '\-[:lower:]' '_[:upper:]' )
	MY_CMD="${MY_CMD}_CMD"

	echo "${MY_CMD}=\"${mycmd}\"" >> ${CMD_FILE}

done

cat >> ${CMD_FILE} <<EOF
###
fi
EOF
