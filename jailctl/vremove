#!/usr/local/bin/cbsd
#v10.1.0
globalconf="${distdir}/cbsd.conf";
MYARG=""
MYOPTARG="jname"
MYDESC="Destroy VM"
CBSDMODULE="jail"
EXTHELP="wf_bremove"

set -e
. ${globalconf}
set +e

. ${subr}
. ${strings}
. ${tools}

if [ "$( id -u )" != "0" ]; then
		SUDO_CMD="/usr/local/bin/sudo -E"
else
		SUDO_CMD=
fi

if [ -z "${1}" ]; then
	select_jail_by_list -s "List of local jails:" -r 0 -e vls
	exec ${SUDO_CMD} /usr/local/cbsd/sudoexec/jremove jname=${jname}
else
	exec ${SUDO_CMD} /usr/local/cbsd/sudoexec/jremove $*
fi
