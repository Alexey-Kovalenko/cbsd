#!/usr/local/bin/cbsd
CBSDMODULE="jail"
MYARG=""
MYOPTARG="order"
MYDESC="List jail run order"
EXTHELP="wf_jorder"
ADDHELP="order=[DESC|ASC]. Default is ASC"

. ${subrdir}/nc.subr
. ${cbsdinit}

[ -z "${order}" ] && order="ASC"
SKIP=

cbsdsqlro local "SELECT jname FROM jails WHERE status<2 AND emulator!=\"jails\" ORDER BY CAST(b_order AS int) ${order}" | while read jname; do
	printf "${jname} "
done

echo
exit 0
