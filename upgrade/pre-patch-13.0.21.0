#!/bin/sh
#v12.0.14
# Update bhyve settings tables for efi_firmware column
: ${distdir="/usr/local/cbsd"}
[ ! -r "${distdir}/subr/cbsdbootstrap.subr" ] && exit 1
. ${distdir}/subr/cbsdbootstrap.subr || exit 1
test_sql_stuff

[ ! -h "${dbdir}/local.sqlite" ] && exit

vms=$( ${miscdir}/sqlcli ${dbdir}/local.sqlite "SELECT jname FROM jails WHERE emulator = \"bhyve\"" )

for i in ${vms}; do
	mydb="${jailsysdir}/${i}/local.sqlite"
	[ ! -r "${mydb}" ] && continue
	# alter jailed if not exist
	unset _test
	_test=$( ${miscdir}/sqlcli ${mydb} "SELECT count(efi_firmware) FROM settings" 2>/dev/null )
	if [ -z "${_test}" ]; then
		${ECHO} "  * ${N1_COLOR}Update settings tables: efi_firmware for ${N2_COLOR}${i}${N0_COLOR}"
		${miscdir}/sqlcli ${mydb} "ALTER TABLE settings ADD COLUMN efi_firmware text default \"/usr/local/cbsd/upgrade/patch/efi.fd\""
	fi
done
