#!/bin/sh
#v12.0.4
# Update bhyve_dskcontroller tables for order_id column
: ${distdir="/usr/local/cbsd"}
unset workdir

# MAIN
. /etc/rc.conf

[ -z "${cbsd_workdir}" ] && exit

workdir="${cbsd_workdir}"

[ ! -f "${workdir}/cbsd.conf" ] && exit

. ${distdir}/cbsd.conf
. ${distdir}/tools.subr
test_sql_stuff

[ ! -h "${dbdir}/local.sqlite" ] && exit

vms=$( ${miscdir}/sqlcli ${dbdir}/local.sqlite "SELECT jname FROM jails WHERE emulator = \"bhyve\"" )

for i in ${vms}; do
	mydb="${jailsysdir}/${i}/local.sqlite"
	[ ! -r "${mydb}" ] && continue
	# alter order_id if not exist
	unset _test
	_test=$( ${miscdir}/sqlcli ${mydb} "SELECT order_id FROM bhyve_dskcontroller LIMIT 1" )
	[ -n "${_test}" ] && continue
	${ECHO} "  * ${MAGENTA}Update settings tables: order_id for ${GREEN}${i}${NORMAL}"
	${miscdir}/sqlcli ${mydb} ALTER TABLE bhyve_dskcontroller ADD COLUMN order_id integer default 0

	# Insert default ahci controller
	 ${miscdir}/sqlcli ${mydb} "INSERT INTO bhyve_dskcontroller ( name, type, order_id ) VALUES ( 'ahci0', 'ahci', 0 )"
done
