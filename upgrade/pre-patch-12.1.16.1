#!/bin/sh
#v12.1.10
# Update bhyvestop_wrapper/bhyverun_wrapper column in bhyve settings
: ${distdir="/usr/local/cbsd"}

# MAIN
if [ -z "${workdir}" ]; then
	[ -z "${cbsd_workdir}" ] && . /etc/rc.conf
	[ -z "${cbsd_workdir}" ] && exit 0
	workdir="${cbsd_workdir}"
fi

[ ! -f "${distdir}/cbsd.conf" ] && exit 0

. ${distdir}/cbsd.conf
. ${distdir}/tools.subr
test_sql_stuff

[ ! -h "${dbdir}/local.sqlite" ] && exit 0

vms=$( ${miscdir}/sqlcli ${dbdir}/local.sqlite "SELECT jname FROM jails WHERE emulator = \"bhyve\"" )

for i in ${vms}; do
	mydb="${jailsysdir}/${i}/local.sqlite"
	[ ! -r "${mydb}" ] && continue
	# alter jailed if not exist

	for j in bhyverun_wrapper bhyvestop_wrapper; do
		unset _test
		_test=$( ${miscdir}/sqlcli ${mydb} "SELECT count(${j}) FROM settings LIMIT 1" 2>/dev/null )
		[ -n "${_test}" ] && continue
		${ECHO} "  * ${N1_COLOR}Update settings table: ${j} ${N2_COLOR}${i}${N0_COLOR}"
		${miscdir}/sqlcli ${mydb} ALTER TABLE settings ADD COLUMN uuid text default "0"
	done
done
