#!/bin/sh
#v12.0.4
# Update bhyvedsk tables for iops_limit column
: ${distdir="/usr/local/cbsd"}
# MAIN
if [ -z "${workdir}" ]; then
	[ -z "${cbsd_workdir}" ] && . /etc/rc.conf
	[ -z "${cbsd_workdir}" ] && exit 0
	workdir="${cbsd_workdir}"
fi

[ ! -f "${distdir}/cbsd.conf" ] && exit 0

. ${distdir}/cbsd.conf
. ${distdir}/tools.subr
test_sql_stuff

[ ! -h "${dbdir}/local.sqlite" ] && exit

vms=$( ${miscdir}/sqlcli ${dbdir}/local.sqlite "SELECT jname FROM jails WHERE emulator = \"bhyve\"" )

for i in ${vms}; do
	mydb="${jailsysdir}/${i}/local.sqlite"
	[ ! -r "${mydb}" ] && continue
	# alter iops_limit if not exist
	unset _test
	_test=$( ${miscdir}/sqlcli ${mydb} "SELECT COUNT(iops_limit) FROM bhyvedsk LIMIT 1" 2>/dev/null )
	[ -n "${_test}" ] && continue
	${ECHO} "  * ${N1_COLOR}Update settings tables: iops_limit for ${N2_COLOR}${i}${N0_COLOR}"
	${miscdir}/sqlcli ${mydb} ALTER TABLE bhyvedsk ADD COLUMN iops_limit BOOLEAN DEFAULT 'false' NULL
done
