#!/bin/sh
#v12.0.4
# Update bhyvedsk tables for dsk_iops_limit column
: ${distdir="/usr/local/cbsd"}
[ ! -r "${distdir}/subr/upgrade.subr" ] && exit
. ${distdir}/subr/upgrade.subr

[ ! -h "${dbdir}/local.sqlite" ] && exit

vms=$( ${miscdir}/sqlcli ${dbdir}/local.sqlite "SELECT jname FROM jails WHERE emulator = \"bhyve\"" )

for i in ${vms}; do
	mydb="${jailsysdir}/${i}/local.sqlite"
	[ ! -r "${mydb}" ] && continue
	# alter dsk_iops_limit if not exist
	unset _test
	_test=$( ${miscdir}/sqlcli ${mydb} "SELECT COUNT(dsk_iops_limit) FROM bhyvedsk LIMIT 1" 2>/dev/null )
	[ -n "${_test}" ] && continue
	${ECHO} "  * ${N1_COLOR}Update settings tables: dsk_iops_limit for ${N2_COLOR}${i}${N0_COLOR}"
	${miscdir}/sqlcli ${mydb} ALTER TABLE bhyvedsk ADD COLUMN dsk_iops_limit text default \"0\"
done
