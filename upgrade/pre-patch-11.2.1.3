#!/bin/sh
#v11.2.1
# Update jails for allow_raw_sockets
: ${distdir="/usr/local/cbsd"}
unset workdir

# MAIN
. /etc/rc.conf

[ -z "${cbsd_workdir}" ] && exit

workdir="${cbsd_workdir}"

[ ! -f "${workdir}/cbsd.conf" ] && exit

. ${distdir}/cbsd.conf
. ${distdir}/tools.subr
test_sql_stuff

[ ! -h "${dbdir}/local.sqlite" ] && exit

vms=$( ${miscdir}/sqlcli ${dbdir}/local.sqlite "SELECT jname FROM jails WHERE emulator = \"bhyve\"" )

for i in ${vms}; do
	mydb="${jailsysdir}/${i}/local.sqlite"
	[ ! -r "${mydb}" ] && continue
	# alter nic_mtu if not exist
	unset _test
	_test=$( ${miscdir}/sqlcli ${mydb} "SELECT allow_raw_sockets FROM jails LIMIT 1" )
	[ -n "${_test}" ] && continue
	${ECHO} "  * ${MAGENTA}Update jails tables: allow_raw_sockets for ${GREEN}${i}${NORMAL}"
	${miscdir}/sqlcli ${mydb} ALTER TABLE jails ADD COLUMN allow_raw_sockets boolean default 1
done
