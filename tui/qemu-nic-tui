#!/usr/local/bin/cbsd
#v10.1.0
MYARG=""
MYOPTARG="jname remote inter"
MYDESC="Dialog based UI to manage Xen NIC"
CBSDMODULE="qemu"

. ${subrdir}/nc.subr
. ${cbsdinit}
. ${subrdir}/qemu.subr
. ${dialog}

### MAIN ###
[ -z "${jname}" ] && jname="${1}"
[ -z "${jname}" ] && select_jail_by_list -s "List of local Xen:" -r 0 -e qls
[ -z "${jname}" ] && err 1 "please specify jname"
. ${subrdir}/rcconf.subr
[ "${emulator}" != "qemu" ] && err 1 "${N1_COLOR}Only for Xen type VMs${N0_COLOR}"

exec bsdconfig qemunic jname="${jname}"
